!!! 5
%html
  %head
    %title
      TSS
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = link_to image_tag("tss-small.png", :alt => "Title Image"), tickets_path
    %div
      %div{:align => "right"}
        - if signed_in?
          Sign out 
          = link_to "#{current_user.name}", signout_path, :method => :delete
        - else
          = Time.now
    %hr
    - if signed_in?
      = render "shared/menu_bar"
      %hr
    = render "shared/the_flash"
    = yield
    = debug(params) if Rails.env.development?