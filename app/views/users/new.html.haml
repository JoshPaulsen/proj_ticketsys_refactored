%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}  
  
  = form_tag users_path, :method => :post do
    
    .field{:align=>"left"}
      = label :user, :name, "Name" 
      = text_field :user, :name
  
    .field{:align=>"left"}
      = label :user, :password, "Password"
      = text_field :user, :password ,{:type => "password", :size=>"51%"}  
  
    .select{:align => "left", :width => "50%"}  
      = label :user, :privilege, "Privilege: "
      = select :user, :privilege, ["admin", "service_provider","user"]
  
    .actions{:align => "center"}  
      = submit_tag "Create User"
      
