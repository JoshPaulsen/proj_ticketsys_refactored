%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}
  %ul{:align => "left"}
    %p= "User ID: #{@user.id}"
    %p= "Name: #{@user.name}"
    %p= "Email: #{@user.email}"
    %p= "Locaton: #{@user.location}"
    %p= "Department: #{@user.department}"
    %p= "Privilege: #{@user.privilege}"
    %p
      Associates IDs: 
      = get_accessible_user_ids(@user)
  %ul= link_to 'Edit', edit_user_path(@user)
  %ul= button_to "Delete", @user, :method => :delete, :confirm => "Are you sure you want to delete this user?"