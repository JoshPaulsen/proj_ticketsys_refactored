%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}   
  
  %h3{:align=>"center"}
    = "User ID: #{@user.id}" 
  
  %div{:align => "left"}
    %ul= "User ID: #{@user.id}"
    %ul= "User: #{@user.name}" 
    %ul= "Privilege: #{@user.privilege}"
    
  %p= link_to 'Edit', edit_user_path(@user)
  %p= button_to "Delete", @user, :method => :delete, :confirm => "Are you sure you want to delete this user?"
