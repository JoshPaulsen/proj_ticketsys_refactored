%div
  = render "ticket_menu"
  %div
    %ul
      %b= "Ticket Number: " 
      = @ticket.id
    %ul
      %b= "Service Area: " 
      = @service_area_name
    %ul
      %b= "Location: "
      = @location_name
    %ul
      %b= "Title: "
      = @ticket.title
    %ul
      %b= "Opened: " 
      = readable_date(@ticket.opened_on)
    %ul
      - if @ticket.closed?
        %b= "Closed: " 
        = readable_date(@ticket.closed_on)
    %ul
      %b= "Creator: " 
      - if !@ticket.creator.blank?
        = link_to "#{@ticket.creator.first_initial_last}", @ticket.creator
    %ul
      %b= "Service Provider: " 
      - if !@ticket.provider.blank?
        = link_to "#{@ticket.provider.first_initial_last}", @ticket.provider
    %ul= render "additional_users"      
    %ul= render "additional_providers"     
    %ul= render "everyone"      
    = render "ticket_questions"
    %ul
      %b= "Description: "
      = @ticket.description
  = render @notes  
  = render "new_note_form"
