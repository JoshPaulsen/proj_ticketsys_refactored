%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}   
  
  %h3{:align=>"center"}
    = "Ticket ID: #{@ticket.id}"  
  
  %div{:align=>"left"}
    %ul= "Ticket ID: #{@ticket.id}"    
    %ul= link_to "Service Provider: #{@ticket.provider.name}", @ticket.provider
    %ul= "Opened At: #{@ticket.opened_on}"
    %ul= "Closed At: #{@ticket.closed_on}"
    %ul= "Title: #{@ticket.title}"
    %ul= "Description: #{@ticket.description}" 
    
  = render @notes  
  %br
  %br
  %br
  
  = form_tag notes_path, :method => :post do  
    .field{:align=>"left"}
      = hidden_field_tag :ticket_id , @ticket.id
      = hidden_field_tag :user_id , current_user.id
      %ul= label :note, :body, "Add a New Note"      
      %ul= text_area :note, :body , :size => "50x5"      
      %ul= submit_tag("New Note")   
  
    
  %ul= link_to 'Edit', edit_ticket_path(@ticket)
  %ul= button_to "Delete", @ticket, :method => :delete, :confirm => "Are you sure you want to delete this ticket?"

