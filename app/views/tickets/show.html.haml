%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}   
  
  %h3{:align=>"center"}
    = "Ticket ID: #{@ticket.id}"  
  
  %div{:align=>"left"}
    %ul= "Ticket ID: #{@ticket.id}"
    %ul= "creator: #{User.find(@ticket.creator).name}"
    %ul= "Service Provider: #{@ticket.provider_id}"
    %ul= "Opened At: #{@ticket.opened_on}"
    %ul= "Closed At: #{@ticket.closed_on}"
    %ul= "Title: #{@ticket.title}"
    %ul= "Description: #{@ticket.description}"
  
  -if !@note.nil?
    = render @notes
  
  = form_tag notes_path, :method => :post do  
    .field{:align=>"left"}
      = label :note, :body, "Body: "
      = text_area :note, :body , :size => "50x5"
      = hidden_field_tag :ticket_id , @ticket.id
      = hidden_field_tag :user_id , current_user.id
      = submit_tag("New Note")   
  
    
  %p= link_to 'Edit', edit_ticket_path(@ticket)
  %p= button_to "Delete", @ticket, :method => :delete, :confirm => "Are you sure you want to delete this ticket?"

