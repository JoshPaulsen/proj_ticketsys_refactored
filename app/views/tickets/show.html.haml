%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}
  %div{:align=>"left"}
    %ul= "Ticket ID: #{@ticket.id}"
    %ul= "Deparment: #{@ticket.department}"
    %ul= link_to "Service Provider: #{@ticket.provider.name}", @ticket.provider
    %ul
      Opened:
      = readable_date(@ticket.opened_on)
    %ul
      Closed:
      = readable_date(@ticket.closed_on)
    %ul= "Title: #{@ticket.title}"
    %ul= "Description: #{@ticket.description}"    
  = render @notes
  %br
  %br
  = render "shared/new_note_form"
  %ul= link_to 'Edit', edit_ticket_path(@ticket)
  %ul= button_to "Delete", @ticket, :method => :delete, :confirm => "Are you sure you want to delete this ticket?"