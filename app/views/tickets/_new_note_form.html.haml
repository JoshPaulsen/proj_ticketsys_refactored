- if @ticket.open? 
  = form_tag notes_path, :method => :post, :multipart => true do
    .field
      = hidden_field_tag :ticket_id , @ticket.id
      = hidden_field_tag :user_id , current_user.id
      = label :note, :body, "Add a New Note"
      %br
      = text_area :note, :body , :size => "50x5"
      %br
      -#%ul= label          :note, :attachment
      -#%ul= file_field     :note, :attachment
      = submit_tag("New Note")