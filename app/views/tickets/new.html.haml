%div{:leftmargin=>"10%", :topmargin=>"5%", :marginwidth=>"10%", :marginheight=>"5%"}
  
  = form_tag tickets_path, :method => :post do

    .field{:align=>"left"}
      = label :ticket, :title, "Title: "
      = text_field :ticket, :title

    .field{:align=>"left", :width=>"50%"}
      = label :ticket, :description, "Description: "
      = text_field :ticket, :description, {:size=>"180%", :placeholder=>"Please describe your issue."}

    .actions{:align=>"center"}
      = submit_tag "Submit Ticket"
