- if !current_user.user?
  %div
    = link_to 'Edit This Ticket', edit_ticket_path(@ticket)
%br
%div
  Add a additional user to this ticket
  = render "add_additional_user_form"
%br
%div
  - if !@ticket.additional_users.blank?
    = "Remove an additional user from this ticket"
    = render "remove_additional_user_form"
%br
  %div
    - if @ticket.open?
      = button_to "Close This Ticket", close_ticket_path(@ticket), :method=> :put
    - else
      = button_to "Reopen This Ticket", open_ticket_path(@ticket), :method=> :put
- if current_user.admin?
  %div
    = button_to "Delete This Ticket", @ticket, :method => :delete
%hr