%table{:cellpadding=>"1", :cellspacing=>"5", :overflow=>"hidden"}
  %tr
    -if @ticket.open?
      %td.set-provider= render "set_primary_provider"    
    -if !current_user.user? and @ticket.open?
      %td.edit-ticket= button_to 'Edit Ticket', edit_ticket_path(@ticket), :method => :get
    -if @ticket.open?
      %td.o-c-ticket= button_to "Close Ticket", close_ticket_path(@ticket), :method=> :put
    -else
      %td.o-c-ticket= button_to "Reopen Ticket", open_ticket_path(@ticket), :method=> :put
    -if current_user.admin?
      %td.delete-ticket= button_to "Delete Ticket", @ticket, :method => :delete

