%table{:cellpadding=>"1", :cellspacing=>"5", :overflow=>"hidden"}
  %tr
    %td.set-provider    
      = render "set_primary_provider"
    %td.edit-ticket
      - if !current_user.user? and @ticket.open?
        = button_to 'Edit Ticket', edit_ticket_path(@ticket), :method => :get
    %td.o-c-ticket
      - if @ticket.open?
        = button_to "Close Ticket", close_ticket_path(@ticket), :method=> :put
      - else
        = button_to "Reopen Ticket", open_ticket_path(@ticket), :method=> :put
    %td.delete-ticket
      - if current_user.admin?
        = button_to "Delete Ticket", @ticket, :method => :delete

