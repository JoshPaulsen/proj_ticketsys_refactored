= form_tag search_path, :method => :get do
  .field
    = label_tag :ticket_id, "Ticket Number: "
    = text_field_tag :ticket_id, @ticket_id
  .field
    = label_tag :title, "Title: "
    = text_field_tag :title, @title
  .field
    = label_tag :description, "Description: "
    = text_field_tag :description, @description
  .field      
    = radio_button_tag :open_closed, :open, checked = true
    = label_tag :open_closed, "Open Tickets"
  .field
    = radio_button_tag :open_closed, :closed, checked = type_checked?("closed")
    = label_tag :open_closed, "Closed Tickets"
  .field      
    = radio_button_tag :open_closed, :all, checked = type_checked?("all")
    = label_tag :open_closed, "Open and Closed"  
  - if !current_user.user?  
    .field      
      = radio_button_tag :all_mine, :mine, checked = true
      = label_tag :all_mine, "My Tickets"
    .field
      = radio_button_tag :all_mine, :all, checked = all_mine_checked?("all")
      = label_tag :all_mine, "All Tickets"
  = render "search_service_areas"
  .action
    = submit_tag "Search"