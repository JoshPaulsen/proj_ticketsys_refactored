= form_tag sessions_path, :method => :post do
  %table
    %tr
      %td.right-just
        %b= label_tag :email, "Email "
      %td= text_field_tag :email, nil, :size => "15"
    %tr
      %td.right-just
        %b= label_tag :password, "Password "
      %td= password_field_tag :password, nil, :size => "15"
    %tr
      %td
      %td.right-just= submit_tag "Sign In"
